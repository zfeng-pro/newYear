/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}


.title{
  padding-top: 60rpx;
  height: 60rpx;
  width: 750rpx;
  z-index: 2;
  position: absolute;
  top: 0;
  left: 0;
  line-height: 60rpx;
  font-weight: 600;
  text-align: center;
}
.cont {
  width: 100%;
  margin: auto;
  text-align: center;
  height: 100vh;
  background: #BC4B48;
  border: none;
  overflow: hidden;
}

.myCanvas {
  width: 100%;
  height: 100%;
  border: none;
  overflow: hidden;
  margin-top: -3rpx;
}

.savePoste {
  background-color: #BC4B48;
  width: 90%;
  margin-left: auto;
  margin-right: auto;
  margin-top: 30rpx;
  color: #fff;
}
